{
  "manifest_version": 3,
  "name": "Seeker",
  "version": "1.0.0",
  "description": "Enable same keyboard shortcuts for all streaming platforms.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.paramountplus.com/*",
    "https://*.hulu.com/*",
    "https://*.disneyplus.com/*",
    "https://*.amazon.com/*",
    "https://*.hbomax.com/*",
    "https://*.max.com/*",
    "https://*.peacocktv.com/*",
    "https://*.appletv.com/*",
    "https://*.tubi.tv/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.paramountplus.com/*",
        "https://*.hulu.com/*",
        "https://*.disneyplus.com/*",
        "https://*.amazon.com/*",
        "https://*.hbomax.com/*",
        "https://*.max.com/*",
        "https://*.peacocktv.com/*",
        "https://*.appletv.com/*",
        "https://*.tubi.tv/*"
      ],
      "js": [
        "js/utils/logger.js",
        "js/utils/dom-utils.js",
        "js/utils/config.js",
        "js/core/player-detector.js",
        "js/core/media-controller.js",
        "js/core/keyboard-handler.js",
        "js/platforms/paramount.js",
        "js/platforms/generic.js",
        "js/ui/notification.js",
        "js/ui/settings-overlay.js",
        "js/main.js"
      ],
      "css": [
        "css/seeker-ui.css"
      ],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Seeker",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "js/inject/*.js",
        "css/*.css",
        "icons/*.svg"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
